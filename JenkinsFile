pipeline {
    agent any

    tools {
        maven "local_mvn"
    }

    stages {
        stage('build') {
            steps {
              sh "mvn -version"
              sh "mvn dependency:purge-local-repository"
              sh "mvn clean install"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}