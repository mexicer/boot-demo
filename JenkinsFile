pipeline {
    environment{
        JAVA_TOOL_OPTIONS = "Duser.home=/var/maven"
    }
    agent {
        docker{
            image 'maven:3.6-openjdk-8'
            args '-v /home/Web/maven/.m2:/var/maven/.m2 -e MAVEN_CONFIG=/var/maven/.m2'
        }
    }

    stages {
        stage('build') {
            steps {
              sh "mvn -version"
              sh "mvn clean install -U"
            }
        }
    }

    post{
        always{
            cleanWs()
        }
    }

}